{
	"layer": "top",
	"position": "top",
	"modules-left": [
		"hyprland/workspaces",
		"custom/media"
	],
	"modules-center": [
		"clock"
	],
	"modules-right": [
		"cpu",
		"memory",
		"tray",
		"network",
		"custom/brightness",
		"custom/notifications",
		"pulseaudio",
		"custom/power"
	],
	"margin-left": 0,
	"margin-right": 0,
	"margin-bottom": 0,
	"hyprland/workspaces": {
		"disable-scroll": true,
		"all-outputs": true,
		"format": "{id}",
		"persistent-workspaces": {
			"1": [],
			"2": [],
			"3": [],
			"4": [],
			"5": []
		}
	},
	"clock": {
		"format": "{:%I:%M %p - %b %d}"
	},
	"cpu": {
		"format": "\uf2db {usage}%",
		"on-click": "kitty -e btop"
	},
	"memory": {
		"interval": 30,
		"format": "\uf1b2 {percentage}%"
	},
	"tray": {
		"icon-size": 16,
		"spacing": 8
	},
	"network": {
		"format-wifi": "\uf1eb",
		"format-ethernet": "\uf796",
		"format-disconnected": "\uf127 ⚠",
		"on-click": "kitty -e nmtui"
	},
	"custom/power": {
		"format": "\uf011",
		"tooltip": false,
		"on-click": "~/.config/waybar/scripts/power-menu.sh"
	},
	"custom/brightness": {
		"format": "\uf108 {}%",
		"exec": "ddcutil getvcp 10 | grep -o 'current value =[ ]*[0-9]*' | grep -o '[0-9]*'",
		"signal": 10,
		"tooltip": false
	},
	"custom/notifications": {
		"tooltip": true,
		"format": "<span size='16pt'>{icon}</span>",
		"format-icons": {
			"notification": "󱅫",
			"none": "󰂜",
			"dnd-notification": "󰂠",
			"dnd-none": "󰪓",
			"inhibited-notification": "󰂛",
			"inhibited-none": "󰪑",
			"dnd-inhibited-notification": "󰂛",
			"dnd-inhibited-none": "󰪑"
		},
		"return-type": "json",
		"exec-if": "which swaync-client",
		"exec": "swaync-client -swb",
		"on-click": "swaync-client -t -sw",
		"on-click-right": "swaync-client -d -sw",
		"escape": true
	},
	"custom/media": {
		"format": "\uf001 {}",
		"max-length": 30,
		"exec": "~/.config/waybar/scripts/scroll-media.sh",
		"interval": 1,
		"on-click": "playerctl play-pause"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-bluetooth": "{icon} {volume}%",
		"format-muted": "\uf026",
		"format-icons": {
			"muted": "\uf6a9",
			"default": [
				"\uf026",
				"\uf027",
				"\uf028"
			]
		},
		"on-click": "pavucontrol"
	}
}
